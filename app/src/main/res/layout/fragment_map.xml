<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.MapFragment">

    <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mapbox_locationComponentEnabled="true"
            android:layout_weight="1"
            app:mapbox_locationComponentPuckBearing="heading"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <Button
                style="?attr/materialIconButtonFilledStyle"
                android:id="@+id/arModeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/ar_24px"
                android:layout_margin="10dp">
        </Button>
        <Button
                style="?attr/materialIconButtonFilledStyle"
                android:id="@+id/recenterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/recenter_24dp"
                android:layout_margin="10dp">

        </Button>
    </LinearLayout>




</LinearLayout>